# Meeting Archaeologist - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# LLM API Configuration (REQUIRED)
# ============================================

# Gemini API Key (default provider)
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Name
# Default: gemini-1.5-flash-exp
# Alternatives: gemini-1.5-pro, gemini-2.0-flash-exp
GEMINI_MODEL=gemini-1.5-flash-exp

# ============================================
# Agent Configuration (OPTIONAL)
# ============================================

# Maximum number of retries on validation failure
# Total attempts = 1 + MAX_RETRIES
# Default: 2
MAX_RETRIES=2

# ============================================
# Application Settings (OPTIONAL)
# ============================================

# Application name
APP_NAME=Meeting Archaeologist

# Application version
APP_VERSION=0.1.0

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# CORS Configuration (OPTIONAL)
# ============================================

# Allowed origin for CORS
# Default: http://localhost:3000 (frontend dev server)
# Production: Set to your deployed frontend URL
CORS_ALLOWED_ORIGIN=http://localhost:3000

# ============================================
# Alternative LLM Providers (OPTIONAL)
# ============================================

# If using OpenRouter instead of Gemini:
# OPENROUTER_API_KEY=your_openrouter_key_here
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# If using OpenAI directly:
# OPENAI_API_KEY=your_openai_key_here
# OPENAI_MODEL=gpt-4o-mini

# ============================================
# Notes
# ============================================

# 1. Only GEMINI_API_KEY is strictly required
# 2. All other variables have sensible defaults
# 3. Never commit your .env file
# 4. Rotate keys immediately if exposed
# 5. Free tier quotas may limit usage
